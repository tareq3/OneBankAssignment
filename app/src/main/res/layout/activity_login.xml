        <Button
            android:id="@+id/btnlogin"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_new"
            android:onClick="onclickLogin"
            android:textStyle="bold"
            android:text="@string/login"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/et_pinnumber"
            app:layout_constraintTop_toBottomOf="@+id/et_pinnumber" />

        <Button
            android:id="@+id/btnforgotpin"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_new"
            android:text="BIO"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/et_pinnumber"
            app:layout_constraintTop_toBottomOf="@+id/et_pinnumber" />

        <EditText
            android:id="@+id/et_account_number"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/et_background"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:drawablePadding="@dimen/text_size_10"
            android:hint="@string/ok_account_number"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textColorLink="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_pinnumber"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/et_background"
            android:drawableLeft="@drawable/ic_baseline_fiber_pin_24"
            android:drawablePadding="@dimen/text_size_10"
            android:hint="@string/login_ok_wallet_pin"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textColorLink="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_account_number" />



    </androidx.constraintlayout.widget.ConstraintLayout>
